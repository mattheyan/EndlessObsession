doctype html
- var canonicalUrl = locals.url.lastIndexOf('/') === locals.url.length - 1 ? locals.url : locals.url + '/';
html(lang='en')
  head
    block head
      meta(charset='utf-8')
      meta(http-equiv='X-UA-Compatible', content='IE=edge,chrome=1')
      title
        block title
          = locals.title + " | Bryan Matthews"
      meta(name='author', content=locals.owner)
      meta(name='description', content='The personal blog of Bryan Matthews')

      <!-- Viewport and Media Queries: http://t.co/dKP3o1e -->
      meta(name='HandheldFriendly', content='True')
      meta(name='MobileOptimized', content='320')
      meta(name='viewport', content='width=device-width, initial-scale=1')

      link(href=url, rel='canonical')
      link(href='/infinity-symbol.png', rel='icon')
      link(href='/atom.xml', rel='alternate', type='application/atom+xml', title=locals.title)

      link(href='/stylesheets/normalize-3.0.2.css', media='screen, projection' rel='stylesheet' type='text/css')
      link(href='/stylesheets/theme-2.0.css', media='screen, projection' rel='stylesheet' type='text/css')
      link(href='/stylesheets/tomorrow.css', media='screen, projection' rel='stylesheet' type='text/css')

      block includes
  body
    div.container
      header(role='banner')
        hgroup
          h1
            a(href=locals.url)= locals.title
          small= locals.subtitle
        nav(role='navigation')
          ul
            li
              a(href=canonicalUrl)= 'Home'
            li
              a(href=canonicalUrl + 'about', rel='author')= 'About'
            li
              a(href=canonicalUrl + 'blog/archives')= 'Blog'
          form(action='https://google.com/search')
            fieldset(role='search')
              input(type='hidden', name='q', value='site:' + locals.url)
              input.search(type='text', name='q', results='0', placeholder='Search' autocomplete='off')
        nav(role='complementary')
          ul
            li
              a(href='/atom.xml', title='RSS')= 'RSS'
            li
              a(href='https://github.com/mattheyan', title='Github: mattheyan', target='_blank')= 'Github'
            li
              a(href='https://twitter.com/BryanMatthews', title='Twitter: @BryanMatthews', target='_blank')= 'Twitter'
      main
        block content
          h2= 'Welcome!'
        footer
          block footer
            small Copyright &copy; #{ new Date().getFullYear() } - #{ locals.owner } &mdash; powered by&nbsp;
                a(href='https://github.com/jnordberg/wintersmith') Wintersmith
          if locals.googleAnalyticsID
            script(type='text/javascript', src='/javascripts/analytics.js?v=1.0.0&id=' + locals.googleAnalyticsID)
