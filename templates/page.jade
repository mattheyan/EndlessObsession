
extends layout

block prepend title
  | #{ page.title + " - "}

block header
  include author
  h1= page.title
  p.author
    | #{ "Written by " }
    mixin author(page.metadata.author)

block content
  article
    header
      h2= page.metadata.title
    section!= typogr(page.html).typogrify()
    section
      h2= 'Comments'
      div#disqus_thread

block prepend footer
  div.nav
    a(href=contents.index.url) Â« Full blog
  script(type='text/javascript', src='/javascripts/disqus.js')
