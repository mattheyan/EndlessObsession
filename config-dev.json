{
  "locals": {
    "url": "http://localhost:8080/",
    "title": "The Endless Obsession",
    "subtitle": "better code",
    "owner": "Bryan Matthews",
    "description": "The technical blog of Bryan Matthews"
  },
  "port": 8080,
  "output": "./dev-pages",
  "ignore": ["*.bak"],
  "plugins": [
    "./plugins/paginator.coffee",
    "./plugins/blog.coffee",
    "wintersmith-contents",
    "wintersmith-libsass",
    "wintersmith-sitemap"
  ],
  "require": {
    "moment": "moment",
    "_": "underscore",
    "typogr": "typogr",
    "htmlToText": "html-to-text"
  },
  "jade": {
    "pretty": true
  },
  "markdown": {
    "smartLists": true,
    "smartypants": true
  },
  "paginator": {
    "articles": "blog",
    "filename": "blog/page/%d/index.html",
    "perPage": 10
  },
  "blog": {
    "postsDir": "blog",
    "template": "post.jade",
    "filenameTemplate": "/blog/:slug/index.html",
    "stripTrailingSlash": true
  }
}
